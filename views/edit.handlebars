<div class="title-block">
  <h1>請修改你的支出</h1>
  <p><sup>*</sup>必填欄位</p>
</div>

<form action="/recordCrud/edit/{{info.id}}" method="post">
  <div class="container">
    <div class="label">
      <label for="name">名稱<sup>*</sup></label>
      <input id="name" value="{{info.name}}" name="name" type="text" required>
    </div>
    <div class="password">
      <label for="date">日期<sup>*</sup></label>
      <input id="date" value="{{info.date}}" type="date" name="date" required>
      </input>
    </div>
    <div class="category">
      <label for="category">類別<sup>*</sup></label>
      <select name="categoryId" aria-label="Default select example" required>
        <option selected value="{{info.categoryId}}">{{info.categoryName}}</option>
        <option value="1">家居物業</option>
        <option value="2">交通出行</option>
        <option value="3">休閒娛樂</option>
        <option value="4">餐飲食品</option>
        <option value="5">其他</option>
      </select>
    </div>
    <div class="amount">
      <label for="amount">金額<sup>*</sup></label>
      <input id="amount" value="{{info.amount}}" name="amount" type="number" min="0" required>
      </input>
    </div>
    <button type="submit">送出</button>
  </div>
</form>